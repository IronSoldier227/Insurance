<!-- PL/Views/ManagerWindow.xaml -->
<Window x:Class="PL.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Панель менеджера" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Назад" Command="{Binding GoBackCommand}"/>
                <MenuItem Header="Выход" Command="{Binding LogoutCommand}"/>
            </MenuItem>
            <MenuItem Header="Отчёты">
                <MenuItem Header="Общая сумма выплат за год" Command="{Binding NavigateToReportsCommand}"/>
                <MenuItem Header="Доходы от полисов за год" Command="{Binding NavigateToAnnualRevenueReportCommand}"/>
            </MenuItem>
            <MenuItem Header="Страховые случаи">
                <MenuItem Header="Рассмотреть случаи" Command="{Binding NavigateToApproveClaimsCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Основное содержимое -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="WelcomeText" 
                      Text="Добро пожаловать, Менеджер!" 
                      FontSize="24" 
                      HorizontalAlignment="Center" 
                      VerticalAlignment="Center"
                      Grid.Row="0"/>

            <StackPanel Grid.Row="1" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <Button Content="Отчёты по выплатам" 
                       Width="200" 
                       Height="40" 
                       Margin="0,10"
                       Command="{Binding NavigateToReportsCommand}"/>
                <Button Content="Рассмотреть случаи" 
                       Width="200" 
                       Height="40" 
                       Margin="0,10"
                       Command="{Binding NavigateToApproveClaimsCommand}"/>
                <Button Content="Доходы от полисов" 
                       Width="200" 
                       Height="40" 
                       Margin="0,10"
                       Command="{Binding NavigateToAnnualRevenueReportCommand}"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>