<!-- PL/Views/ReportsWindow.xaml -->
<Window x:Class="PL.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отчёты" Height="300" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для ввода года -->
            <RowDefinition Height="Auto"/>
            <!-- Для кнопки -->
            <RowDefinition Height="Auto"/>
            <!-- Для результата -->
            <RowDefinition Height="*"/>
            <!-- Для ошибки -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Введите год:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="YearTextBox" Text="2025" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10"/>
        </StackPanel>

        <Button Grid.Row="1" Content="Сформировать отчёт" 
                Command="{Binding GenerateReportCommand}" 
                CommandParameter="{Binding ElementName=YearTextBox, Path=Text}"
                Width="150" HorizontalAlignment="Left" Margin="0,0,0,10"/>
        <Button Grid.Row="1" Content="Назад" 
        Command="{Binding GoBack}" 
        CommandParameter="{Binding ElementName=YearTextBox, Path=Text}"
        Width="67" HorizontalAlignment="Left" Margin="181,0,0,10"/>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Общая сумма выплат за указанный год:" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="TotalAmountTextBlock" Text="{Binding TotalAmount, StringFormat={}{0:N2}}" 
                       FontSize="16" Foreground="DarkBlue" Margin="0,0,0,10"/>
        </StackPanel>

        <TextBlock Grid.Row="3" Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
    </Grid>
</Window>