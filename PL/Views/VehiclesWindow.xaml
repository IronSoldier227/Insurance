<!-- PL/Views/VehiclesWindow.xaml -->
<Window x:Class="PL.VehiclesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мои автомобили" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Панель кнопок и фильтров -->
        <StackPanel DockPanel.Dock="Top" 
                   Orientation="Horizontal" 
                   Margin="10">
            <!-- Фильтр -->
            <TextBlock Text="Фильтр:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding FilterTypes}"
                     SelectedItem="{Binding SelectedFilterType}"
                     Width="150" Margin="0,0,10,0"/>
            <!-- Кнопки -->
            <Button Content="Назад"
                    Command="{Binding GoBackCommand}"
                       Width="60" Margin="0,0,10,0"/>
            <Button Content="Обновить" 
                   Command="{Binding LoadVehiclesCommand}"
                   Width="80" Margin="0,0,10,0"/>
            <Button Content="Добавить" 
                   Command="{Binding AddVehicleCommand}"
                   Width="80" Margin="0,0,10,0"/>
            <Button Content="Редактировать" 
                   Command="{Binding EditVehicleCommand}"
                   Width="100" Margin="0,0,10,0"/>
            <Button Content="Застраховать" 
                   Command="{Binding InsureVehicleCommand}"
                   Width="100"/>
        </StackPanel>

        <!-- Сообщение об ошибке -->
        <TextBlock DockPanel.Dock="Top" 
                  Text="{Binding ErrorMessage}" 
                  Foreground="Red" 
                  Margin="10,0,10,5"
                  TextWrapping="Wrap"/>

        <!-- Список автомобилей -->
        <DataGrid DockPanel.Dock="Top"
                 ItemsSource="{Binding Vehicles}"
                 SelectedItem="{Binding SelectedVehicle}"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 IsReadOnly="True"
                 Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Гос. номер" 
                                   Binding="{Binding PlateNum}" 
                                   Width="100"/>
                <DataGridTextColumn Header="Марка" 
                                   Binding="{Binding Brand}" 
                                   Width="100"/>
                <DataGridTextColumn Header="Модель" 
                                   Binding="{Binding Model}" 
                                   Width="100"/>
                <DataGridTextColumn Header="Цвет" 
                                   Binding="{Binding Color}" 
                                   Width="80"/>
                <DataGridTextColumn Header="Год" 
                                   Binding="{Binding YearOfProduction}" 
                                   Width="60"/>
                <DataGridTextColumn Header="VIN" 
                                   Binding="{Binding Vin}" 
                                   Width="150"/>
                <DataGridTextColumn Header="Категория" 
                                   Binding="{Binding Category}" 
                                   Width="80"/>
                <DataGridTextColumn Header="Мощность (л.с.)" 
                                   Binding="{Binding PowerHp}" 
                                   Width="100"/>
                <DataGridCheckBoxColumn Header="Застрахован" 
                                       Binding="{Binding IsInsured}" 
                                       Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
    