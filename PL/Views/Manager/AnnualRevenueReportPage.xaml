<!-- PL.Views/AnnualRevenueReportPage.xaml -->
<Page x:Class="PL.AnnualRevenueReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Отчёт по доходам от полисов за год">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Ввод года и кнопка -->
            <RowDefinition Height="Auto"/>
            <!-- Ошибка -->
            <RowDefinition Height="Auto"/>
            <!-- Итоги -->
            <RowDefinition Height="*"/>
            <!-- Таблица -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Введите год:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox Text="{Binding YearInput, UpdateSourceTrigger=PropertyChanged}" Width="100" HorizontalAlignment="Left"/>
            <Button Content="Загрузить отчёт" Command="{Binding LoadReportCommand}" Style="{StaticResource CustomButtonStyle}" Width="120" Margin="10,0,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,0,0,10" TextWrapping="Wrap" Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        <!-- Итоги -->
        <GroupBox Grid.Row="2" Header="Итоги" Margin="0,0,0,10" Visibility="{Binding Report, Converter={StaticResource ObjectToVisibilityConverter}}" Style="{StaticResource CustomGroupBoxStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Text="Количество:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Report.TotalCount}"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Margin="5">
                    <TextBlock Text="Общая сумма:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Report.TotalAmount, StringFormat={}{0:N2} ₽}"/>
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.ColumnSpan="3" Margin="5">
                    <TextBlock Text="Среднее:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Report.Average, StringFormat={}{0:N2} ₽}"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Таблица -->
        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Report.ClientData}" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Visibility="{Binding Report, Converter={StaticResource ObjectToVisibilityConverter}}"
                  Style="{StaticResource CustomDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО Клиента" Binding="{Binding ClientFullName}" Width="*"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding Amount, StringFormat={}{0:N2} ₽}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>