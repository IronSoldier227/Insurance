<Page x:Class="PL.PoliciesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Мои страховки">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для кнопок и фильтров -->
            <RowDefinition Height="Auto"/>
            <!-- Для ошибки -->
            <RowDefinition Height="*"/>
            <!-- Для DataGrid -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Обновить" Command="{Binding LoadPoliciesCommand}" Style="{StaticResource CustomButtonStyle}" Width="80" Margin="0,0,10,0"/>

            <TextBlock Text="Статус:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox ItemsSource="{Binding StatusFilters}"
                     SelectedItem="{Binding SelectedStatusFilter}"
                     Width="120" Margin="0,0,10,0"/>

            <TextBlock Text="Тип:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox ItemsSource="{Binding TypeFilters}"
                     SelectedItem="{Binding SelectedTypeFilter}"
                     Width="120" Margin="0,0,10,0"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,0,0,10" TextWrapping="Wrap" Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        <DataGrid Grid.Row="2"
                 ItemsSource="{Binding Policies}" 
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 IsReadOnly="True"
                 Style="{StaticResource CustomDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер полиса" Binding="{Binding PolicyNumber}" Width="120"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding TypeName}" Width="100"/>
                <DataGridTextColumn Header="Гос. номер" Binding="{Binding VehiclePlateNum}" Width="100"/>
                <DataGridTextColumn Header="Марка" Binding="{Binding VehicleBrand}" Width="100"/>
                <DataGridTextColumn Header="Модель" Binding="{Binding VehicleModel}" Width="100"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusName}" Width="100"/>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding TotalPrice, StringFormat={}{0:N2} ₽}" Width="120"/>
                <DataGridTextColumn Header="Начало" Binding="{Binding StartDate, StringFormat=dd.MM.yyyy}" Width="100"/>
                <DataGridTextColumn Header="Конец" Binding="{Binding EndDate, StringFormat=dd.MM.yyyy}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>