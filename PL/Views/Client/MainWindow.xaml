<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Страхование автомобилей" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <!-- Навигационное меню -->
            <ColumnDefinition Width="*"/>
            <!-- Контент (Frame) -->
        </Grid.ColumnDefinitions>

        <!-- Навигационное меню -->
        <StackPanel Grid.Column="0" Background="{StaticResource HeaderBackgroundBrush}" Margin="0,0,5,0">
            <TextBlock Text="Меню" Style="{StaticResource CustomHeaderTextStyle}" Margin="10,10,10,10"/>
            <Button Content="Автомобили" Command="{Binding NavigateToVehiclesCommand}" Style="{StaticResource CustomButtonStyle}" Margin="10,5"/>
            <Button Content="Страховки" Command="{Binding NavigateToPoliciesCommand}" Style="{StaticResource CustomButtonStyle}" Margin="10,5"/>
            <Button Content="Страховые случаи" Command="{Binding NavigateToClaimsCommand}" Style="{StaticResource CustomButtonStyle}" Margin="10,5"/>
            <Button Content="Выплаты" Command="{Binding NavigateToPaymentsCommand}" Style="{StaticResource CustomButtonStyle}" Margin="10,5"/>
            <Button Content="Выход" Command="{Binding LogoutCommand}" Style="{StaticResource CustomButtonStyle}" Margin="10,5"/>
        </StackPanel>

        <!-- Контент -->
        <Frame x:Name="MainFrame" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="5,0,0,0" Background="{StaticResource BackgroundBrush}"/>
    </Grid>
</Window>