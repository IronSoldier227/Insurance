<!-- PL/Views/RegisterClaimWindow.xaml -->
<Window x:Class="PL.RegisterClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подать заявку на страховой случай" Height="605" Width="650"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource CustomWindowStyle}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel>
                <Label Content="Номер полиса" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Policies}" 
                         SelectedItem="{Binding SelectedPolicy}"
                         DisplayMemberPath="PolicyNumber"
                         Margin="0,0,0,15"/>

                <Label Content="Дата происшествия" Margin="0,0,0,5"/>
                <DatePicker SelectedDate="{Binding ClaimDate, UpdateSourceTrigger=PropertyChanged}" 
                           Margin="0,0,0,15"/>

                <Label Content="Место происшествия" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource CustomTextBoxStyle}"
                         Height="33" Margin="0,0,0,15"/>

                <Label Content="Описание происшествия" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" AcceptsReturn="True" 
                         Style="{StaticResource CustomTextBoxStyle}"
                         Height="100" Margin="0,0,0,15"/>

                <Label Content="Оценённый ущерб (₽)" Margin="0,0,0,5"/>
                <TextBox Text="{Binding EstimatedDamage, UpdateSourceTrigger=PropertyChanged}" 
                         Style="{StaticResource CustomTextBoxStyle}"
                         Margin="0,0,0,15"/>

                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}" 
                          Foreground="Red" 
                          Margin="0,10,0,0"
                          TextWrapping="Wrap"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,20,0,0">
            <Button Content="Отмена" 
                   Command="{Binding CancelCommand}"
                   Style="{StaticResource CustomButtonStyle}"
                   Width="80"
                   Margin="0,0,10,0"/>
            <Button Content="Отправить" 
                   Command="{Binding SubmitClaimCommand}"
                   Style="{StaticResource CustomButtonStyle}"
                   Width="100"/>
        </StackPanel>
    </Grid>
</Window>