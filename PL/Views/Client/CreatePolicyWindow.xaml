<!-- PL/Views/CreatePolicyWindow.xaml -->
<Window x:Class="PL.CreatePolicyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:PL.Converters"
        Title="Оформление страхового полиса" Height="719" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Style="{StaticResource CustomWindowStyle}">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Панель кнопок -->
            <RowDefinition Height="Auto"/>
            <!-- Сообщение об ошибке -->
            <RowDefinition Height="Auto"/>
            <!-- Информация об авто -->
            <RowDefinition Height="Auto"/>
            <!-- Выбор типа -->
            <RowDefinition Height="Auto"/>
            <!-- Срок действия -->
            <RowDefinition Height="Auto"/>
            <!-- Расчет стоимости -->
            <RowDefinition Height="*"/>
            <!-- Пустое пространство -->
            <RowDefinition Height="Auto"/>
            <!-- Кнопки внизу -->
        </Grid.RowDefinitions>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Назад" Command="{Binding GoBackCommand}" 
                    Style="{StaticResource CustomButtonStyle}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Обновить" Command="{Binding LoadDataCommand}" 
                    Style="{StaticResource CustomButtonStyle}" Width="80"/>
        </StackPanel>

        <!-- Сообщение об ошибке -->
        <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" 
                   Foreground="Red" 
                   Margin="0,0,0,10" 
                   TextWrapping="Wrap" 
                   Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        <!-- Информация об автомобиле -->
        <GroupBox Grid.Row="2" Header="Информация об автомобиле" Margin="0,0,0,10"
                  Style="{StaticResource CustomGroupBoxStyle}">
            <StackPanel>
                <TextBlock Text="{Binding Vehicle.PlateNum, StringFormat='Гос. номер: {0}'}" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding Vehicle.Brand, StringFormat='Марка: {0}'}" Margin="0,0,0,2"/>
                <TextBlock Text="{Binding Vehicle.Model, StringFormat='Модель: {0}'}" Margin="0,0,0,2"/>
                <TextBlock Text="{Binding Vehicle.Color, StringFormat='Цвет: {0}'}" Margin="0,0,0,2"/>
                <TextBlock Text="{Binding Vehicle.YearOfProduction, StringFormat='Год выпуска: {0}'}" Margin="0,0,0,2"/>
                <TextBlock Text="{Binding Vehicle.Vin, StringFormat='VIN: {0}'}" Margin="0,0,0,2"/>
                <TextBlock Text="{Binding Vehicle.PowerHp, StringFormat='Мощность: {0} л.с.'}" Margin="0,0,0,2"/>
                <TextBlock Text="{Binding Vehicle.Category, StringFormat='Категория: {0}'}" Margin="0,0,0,2"/>
            </StackPanel>
        </GroupBox>

        <!-- Выбор типа полиса -->
        <GroupBox Grid.Row="3" Header="Тип страхования" Margin="0,0,0,10"
                  Style="{StaticResource CustomGroupBoxStyle}">
            <StackPanel>
                <TextBlock Text="Выберите тип полиса:" Style="{StaticResource CustomHeaderTextStyle}"/>
                <ComboBox ItemsSource="{Binding AvailablePolicyTypes}"
                         SelectedItem="{Binding SelectedPolicyType}"
                         IsEnabled="{Binding AvailablePolicyTypes.Count, Converter={StaticResource PositiveIntToBoolConverter}}"
                         Style="{StaticResource CustomComboBoxStyle}" Margin="0,0,0,5"/>
                <TextBlock Text="Нет доступных типов для оформления." 
                          Foreground="Red" 
                          FontStyle="Italic"
                          Visibility="{Binding AvailablePolicyTypes.Count, Converter={StaticResource InvertedPositiveIntToVisibilityConverter}}" />
            </StackPanel>
        </GroupBox>

        <!-- Срок действия -->
        <GroupBox Grid.Row="4" Header="Срок действия" Margin="0,0,0,10"
                  Style="{StaticResource CustomGroupBoxStyle}">
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="12 месяцев" 
                             IsChecked="{Binding PolicyDurationMonths, Converter={StaticResource IntToBoolConverter}, ConverterParameter=12}" 
                             Style="{StaticResource CustomRadioButtonStyle}" Margin="0,0,10,0"/>
                <RadioButton Content="6 месяцев" 
                             IsChecked="{Binding PolicyDurationMonths, Converter={StaticResource IntToBoolConverter}, ConverterParameter=6}" 
                             Style="{StaticResource CustomRadioButtonStyle}" Margin="0,0,10,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Расчет стоимости -->
        <GroupBox Grid.Row="5" Header="Расчет стоимости" Margin="0,0,0,10"
                  Style="{StaticResource CustomGroupBoxStyle}">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Базовая ставка:"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BasePrice, StringFormat={}{0:N2} ₽}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Коэффициент мощности:"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PowerCoefficient, StringFormat={}{0:F2}}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Коэффициент стажа:"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ExperienceCoefficient, StringFormat={}{0:F2}}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Коэффициент бонус-малус:"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding BonusMalusCoefficient, StringFormat={}{0:F2}}"/>

                    <Separator Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,5"/>

                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Итоговая стоимость (с учётом срока):" FontWeight="Bold"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding FinalPriceForUser, StringFormat={}{0:N2} ₽}" FontWeight="Bold" Foreground="Green"/>
                </Grid>
            </StackPanel>
        </GroupBox>

        <!-- Кнопки -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Command="{Binding CancelCommand}" 
                    Style="{StaticResource CustomButtonStyle}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Оформить полис" Command="{Binding CreatePolicyCommand}" 
                    Style="{StaticResource CustomButtonStyle}" Width="112" Background="{StaticResource AccentBrush}" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>