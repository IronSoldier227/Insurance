<!-- PL/Views/ApproveClaimsWindow.xaml -->
<Window x:Class="PL.ApproveClaimsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Рассмотрение страховых случаев" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Для кнопок -->
            <RowDefinition Height="Auto"/>
            <!-- Для ошибки -->
            <RowDefinition Height="*"/>
            <!-- Для DataGrid -->
        </Grid.RowDefinitions>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button Content="Назад" Command="{Binding GoBackCommand}" Width="80" Margin="0,0,10,0"/>
            <Button Content="Обновить" Command="{Binding LoadClaimsCommand}" Width="80" Margin="0,0,10,0"/>
        </StackPanel>

        <!-- Сообщение об ошибке -->
        <TextBlock Grid.Row="1" Text="{Binding ErrorMessage}" Foreground="Red" Margin="0,0,0,10" TextWrapping="Wrap" Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

        <!-- Таблица страховых случаев -->
        <DataGrid Grid.Row="2"
                 ItemsSource="{Binding Claims}"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 IsReadOnly="False" 
                 Margin="0,10,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Полис" Binding="{Binding PolicyNumber}" Width="120"/>
                <DataGridTextColumn Header="Дата" Binding="{Binding ClaimDate, StringFormat=dd.MM.yyyy HH:mm}" Width="120"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding StatusName}" Width="100"/>
                <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="200"/>
                <DataGridTextColumn Header="Место" Binding="{Binding Location}" Width="150"/>
                <DataGridTextColumn Header="Оценка ущерба" Binding="{Binding EstimatedDamage, StringFormat={}{0:N2} ₽}" Width="120"/>
                <!-- Столбец для кнопок одобрения/отклонения -->
                <DataGridTemplateColumn Header="Действие" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <!-- Привязываем напрямую к команде в ClaimWithCommands -->
                                <Button Content="Одобрить" Command="{Binding ApproveCommand}" Width="60" Margin="0,0,5,0" Background="LightGreen"/>
                                <Button Content="Отклонить" Command="{Binding RejectCommand}" Width="60" Background="LightCoral"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>