<!-- PL/Views/MainWindow.xaml -->
<Window x:Class="PL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PL"
        Title="Страхование автомобилей" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <DockPanel>
        <!-- Меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Назад" Command="{Binding GoBackCommand}"/>
                <MenuItem Header="Выход" Command="{Binding LogoutCommand}"/>
            </MenuItem>
            <MenuItem Header="Автомобили">
                <MenuItem Header="Мои автомобили" Command="{Binding NavigateToVehiclesCommand}"/>
            </MenuItem>
            <MenuItem Header="Страховки">
                <MenuItem Header="Мои страховки" Command="{Binding NavigateToPoliciesCommand}"/>
            </MenuItem>
            <MenuItem Header="Страховые случаи">
                <MenuItem Header="Мои страховые случаи" Command="{Binding NavigateToClaimsCommand}"/>
            </MenuItem>
            <MenuItem Header="Выплаты">
                <MenuItem Header="Мои выплаты" Command="{Binding NavigateToPaymentsCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Основное содержимое -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="WelcomeText" 
                      Text="Добро пожаловать!" 
                      FontSize="20" 
                      HorizontalAlignment="Center" 
                      Margin="20"
                      Grid.Row="0"/>

            <StackPanel Grid.Row="1" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center">
                <Button Content="Мои автомобили" 
                       Width="200" 
                       Height="40" 
                       Margin="0,10"
                       Command="{Binding NavigateToVehiclesCommand}"/>
                <Button Content="Мои страховки" 
                       Width="200" 
                       Height="40" 
                       Margin="0,10"
                       Command="{Binding NavigateToPoliciesCommand}"/>
                <Button Content="Мои страховые случаи" 
                       Width="200" 
                       Height="40" 
                       Margin="0,10"
                       Command="{Binding NavigateToClaimsCommand}"/>
                <Button Content="Мои выплаты" 
                       Width="200" 
                       Height="40" 
                       Margin="0,10"
                       Command="{Binding NavigateToPaymentsCommand}"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>