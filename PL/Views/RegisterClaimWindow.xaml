<!-- PL/Views/RegisterClaimWindow.xaml -->
<Window x:Class="PL.RegisterClaimWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Подать заявку на страховой случай" Height="500" Width="600"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel>
                <TextBlock Text="Номер полиса" FontWeight="Bold" Margin="0,0,0,5"/>
                <ComboBox ItemsSource="{Binding Policies}" 
                         SelectedItem="{Binding SelectedPolicy}"
                         DisplayMemberPath="PolicyNumber" 
                         Margin="0,0,0,15"/>

                <TextBlock Text="Дата происшествия" FontWeight="Bold" Margin="0,0,0,5"/>
                <DatePicker SelectedDate="{Binding ClaimDate, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

                <TextBlock Text="Место происшествия" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Location, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Height="30"/>

                <TextBlock Text="Описание происшествия" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" AcceptsReturn="True" 
                         Margin="0,0,0,15" Height="100"/>

                <TextBlock Text="Оценённый ущерб (₽)" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Text="{Binding EstimatedDamage, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15"/>

                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}" 
                          Foreground="Red" 
                          Margin="0,10,0,0"
                          TextWrapping="Wrap"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="1" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,10,0,0">
            <Button Content="Отмена" 
                   Command="{Binding CancelCommand}"
                   Width="80"
                   Margin="0,0,10,0"/>
            <Button Content="Отправить" 
                   Command="{Binding SubmitClaimCommand}"
                   Width="100"/>
        </StackPanel>
    </Grid>
</Window>