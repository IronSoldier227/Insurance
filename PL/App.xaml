<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PL"
             xmlns:converters="clr-namespace:PL.Converters">
    <!-- Убедитесь, что пространство имен указано правильно -->
    <Application.Resources>
        <ResourceDictionary>
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
            <!-- Добавим новые конвертеры -->
            <converters:EditingTitleConverter x:Key="EditingTitleConverter"/>
            <!-- Должно быть здесь -->
            <converters:InvertedBoolToVisibilityConverter x:Key="InvertedBoolToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:SaveButtonTextConverter x:Key="SaveButtonTextConverter"/>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:InsuranceToIdConverter x:Key="InsuranceToIdConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>